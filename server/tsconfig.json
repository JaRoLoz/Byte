{
    "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "typeRoots": ["../node_modules/@typescript-to-lua"],
        "moduleResolution": "Node",
        "strict": true,
        "rootDir": ".",
        "outDir": "../build/server",
        "declaration": true,
        "noUnusedLocals": true
    },
    "exclude": ["../node_modules", ".ignored_shared"],
    "tstl": {
        "luaTarget": "5.4",
        "noImplicitSelf": true,
        "noHeader": true
    },
    "typedocOptions": {
        "name": "Server",
        "out": "../docs/server",
        "exclude": "**/.ignored_shared/**/*.ts",
        "entryPointStrategy": "expand",
        "plugin": "typedoc-github-theme"
    }
}
